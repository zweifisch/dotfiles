whichweek(){
	week=`date -d "now" +%U`
	echo "$week + 1" | bc
}

svn-add-all(){
	svn st | grep '^?' | sed 's/^?[ \t]\+//' | xargs -i svn add {}
}

svn-diff-by-extension(){
	exts='';
	for i in "$@"; do
		if [ -z "$exts" ]; then
			exts="$exts -iname \"*.$i\"";
		else
			exts="$exts -o -iname \"*.$i\"";
		fi
	done;
	svn diff $(eval "find -type f $exts")
}

