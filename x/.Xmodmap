! remove Lock = Caps_Lock
! keysym Caps_Lock = Escape

!
! make caps_lock an additional control
clear Lock
keycode 66 = Control_L
add Control = Control_L

!
! make escape be caps_lock
keysym Escape = Caps_Lock
add Lock = Caps_Lock

!
! make a fake escape key (so we can map it with xcape)
keycode 999 = Escape


! Swap the numbers and symbols
keycode 10 = exclam 1
keycode 11 = at 2
keycode 12 = numbersign 3
keycode 13 = dollar 4
keycode 14 = percent 5
keycode 15 = asciicircum 6
keycode 16 = ampersand 7
keycode 17 = asterisk 8
keycode 18 = parenleft 9
keycode 19 = parenright 0

keycode 49 =  asciitilde grave

keycode 47 = colon semicolon

keycode 51 = bar backslash

keycode 34 = braceleft bracketleft
keycode 35 = braceright bracketright

! keycode 48 = quotedbl apostrophe
